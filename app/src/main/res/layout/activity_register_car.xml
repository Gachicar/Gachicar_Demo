<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RegisterCarActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step 02: 공유차량 등록"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="차량 닉네임을 입력하세요"
        android:layout_marginTop="16dp"
        android:layout_gravity="start"/>

    <EditText
        android:id="@+id/nicknameCarEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="예: 가족여행용 SUV"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="차량 번호를 입력하세요"
        android:layout_marginTop="16dp"
        android:layout_gravity="start"/>

    <EditText
        android:id="@+id/numberCarEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="예: 12가 3456"
        android:layout_marginTop="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/nextCarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"/>
</LinearLayout>